local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local function click()
    -- Create a UserInputService input event for clicking
    local mouse = UserInputService:GetMouse()

    while true do
        wait(5) -- Wait for 5 seconds

        -- Simulate a click at the mouse's current position
        local input = Instance.new("InputObject")
        input.UserInputType = Enum.UserInputType.MouseButton1
        input.Position = Vector2.new(mouse.X, mouse.Y)

        -- Fire the UserInputService click event
        UserInputService.InputBegan:Fire(input)
        UserInputService.InputEnded:Fire(input)
    end
end

-- Start the auto-clicking
click()
