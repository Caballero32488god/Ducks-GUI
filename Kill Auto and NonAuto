local player = game.Players.LocalPlayer
local tool = player.Backpack:FindFirstChild("Punch") or player.Character:FindFirstChild("Punch")

-- Function to auto-click
local function autoClick()
    while tool and tool.Parent == player.Character do
        -- Fire the event to hit (modify as necessary for your tool)
        player.muscleEvent:FireServer("punch", "leftHand") -- Change as needed
        player.muscleEvent:FireServer("punch", "rightHand") -- Change as needed
        
        wait(0.1) -- Adjust the wait time for speed of clicking
    end
end

-- Start the auto-clicking when the tool is equipped
tool.Equipped:Connect(function()
    autoClick()
end)

-- Stop auto-clicking when the tool is unequipped
tool.Unequipped:Connect(function()
    tool = nil
end)
