local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Function to teleport the bodies of all players to a fixed position in front of this player's character
local function teleportBodies()
    local character = player.Character
    if not character or not character:FindFirstChild("Head") then return end

    local headPosition = character.Head.Position
    local frontOffset = character.Head.CFrame.LookVector * 5 -- Adjust distance in front of player

    -- Calculate the target position for the bodies
    local targetPosition = headPosition + frontOffset

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= player and otherPlayer.Character then
            local humanoidRootPart = otherPlayer.Character:FindFirstChild("HumanoidRootPart")
            if humanoidRootPart then
                -- Teleport the other player's body to the target position
                humanoidRootPart.Position = targetPosition
            end
        end
    end
end

-- Loop to continuously teleport bodies
while true do
    teleportBodies()
    wait(0.1) -- Adjust the delay as needed (0.1 seconds)
end
