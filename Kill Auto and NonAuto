local player = game.Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

-- Function to teleport players in front of the local player
local function teleportPlayers()
    for _, otherPlayer in ipairs(game.Players:GetPlayers()) do
        if otherPlayer ~= player then
            local character = otherPlayer.Character
            if character and character:FindFirstChild("HumanoidRootPart") then
                character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, -5)
            end
        end
    end
end

-- Function to enable punching with adjustments
local function enablePunching()
    for _, tool in ipairs(backpack:GetChildren()) do
        if tool:IsA("Tool") then
            if tool:FindFirstChild("attackTime") then
                tool.attackTime.Value = 0.1
            end
            if tool:FindFirstChild("repTime") then
                tool.repTime.Value = 0.1
            end
        end
    end

    -- Punching loop
    while true do
        player.muscleEvent:FireServer("punch", "leftHand")
        player.muscleEvent:FireServer("punch", "rightHand")
        wait(0)  -- Wait for 0 seconds before the next punch (immediate)
    end
end

-- Main execution
teleportPlayers()
enablePunching()
