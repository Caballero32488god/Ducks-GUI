local UserInputService = game:GetService("UserInputService")

local function tap()
    while true do
        wait(5) -- Wait for 5 seconds

        -- Create a new InputObject for the tap
        local tapInput = Instance.new("InputObject")
        tapInput.UserInputType = Enum.UserInputType.Touch
        tapInput.Position = Vector2.new(0, 0) -- Change this if you want to tap at a specific position

        -- Fire the UserInputService touch events
        UserInputService.InputBegan:Fire(tapInput)
        UserInputService.InputEnded:Fire(tapInput)
    end
end

-- Start the auto-tapping
tap()
