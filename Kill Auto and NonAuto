local Players = game:GetService("Players")

local function expandHitbox(humanoid)
    -- Expand the hitbox
    humanoid.HipWidth = humanoid.HipWidth + 10
    humanoid.HipHeight = humanoid.HipHeight + 10
end

local function checkAndExpandHitboxes()
    while true do
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character then
                local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    expandHitbox(humanoid)
                end
            end
        end
        -- No wait time for instantaneous effect
    end
end

-- Start the loop
checkAndExpandHitboxes()
