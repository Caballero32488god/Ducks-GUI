local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local punchTool = LocalPlayer.Backpack:WaitForChild("Punch")
local animationFolder = LocalPlayer:WaitForChild("attackMoveAnims")
local doublePunchAnimation = animationFolder:WaitForChild("doublePunch")

local function performPunch()
    -- Play the double punch animation
    local anim = Instance.new("Animation")
    anim.AnimationId = doublePunchAnimation.AnimationId
    LocalPlayer.Character.Humanoid:LoadAnimation(anim):Play()

    -- Create a visual punch effect
    local punchEffect = Instance.new("Part")
    punchEffect.Size = Vector3.new(1, 1, 1)
    punchEffect.Color = Color3.fromRGB(255, 0, 0) -- Red color for the effect
    punchEffect.Position = LocalPlayer.Character.HumanoidRootPart.Position + Vector3.new(0, 1, 0)
    punchEffect.Anchored = true
    punchEffect.CanCollide = false
    punchEffect.Parent = workspace

    -- Destroy the visual effect after a short duration
    game:GetService("Debris"):AddItem(punchEffect, 0.5)
end

while true do
    performPunch()
    wait(5) -- Wait 5 seconds before punching again
end
