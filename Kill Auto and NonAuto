local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create a model to hold cloned bodies
local clones = Instance.new("Model")
clones.Name = "Clones"
clones.Parent = workspace

-- Function to teleport the bodies of all players to a fixed position directly in front of this player's character
local function teleportBodies()
    local character = player.Character
    if not character or not character:FindFirstChild("Head") then return end

    local headPosition = character.Head.Position
    local frontOffset = character.Head.CFrame.LookVector * 5 -- Distance in front of the player

    -- Calculate the target position for the bodies
    local targetPosition = headPosition + frontOffset

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= player and otherPlayer.Character then
            local humanoidRootPart = otherPlayer.Character:FindFirstChild("HumanoidRootPart")
            if humanoidRootPart then
                -- Clone the other player's character if not already cloned
                local clonedCharacter = clones:FindFirstChild(otherPlayer.Name)
                if not clonedCharacter then
                    clonedCharacter = otherPlayer.Character:Clone()
                    clonedCharacter.Parent = clones
                    clonedCharacter:SetPrimaryPartCFrame(CFrame.new(targetPosition))
                else
                    -- Update the cloned character's position
                    clonedCharacter:SetPrimaryPartCFrame(CFrame.new(targetPosition))
                end
            end
        end
    end
end

-- Loop to continuously teleport bodies
while true do
    teleportBodies()
    wait(0.1) -- Adjust the delay as needed (0.1 seconds)
end
