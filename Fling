local Lighting = game:GetService("Lighting")
local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Get the buttons
local dayButton = playerGui.ScreenGui:WaitForChild("DayButton")
local nightButton = playerGui.ScreenGui:WaitForChild("NightButton")

-- Function to set it to day
local function setDay()
    Lighting.TimeOfDay = "12:00:00"  -- Set time to noon (daytime)
end

-- Function to set it to night
local function setNight()
    Lighting.TimeOfDay = "00:00:00"  -- Set time to midnight (nighttime)
end

-- Connect buttons to functions
dayButton.MouseButton1Click:Connect(setDay)
nightButton.MouseButton1Click:Connect(setNight)
