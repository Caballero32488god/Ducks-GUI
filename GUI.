local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Game Features", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local function setNoClip(character, value)
    for _, part in ipairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = not value
        end
    end
end

local function enableNoClip()
    for _, player in ipairs(Players:GetPlayers()) do
        local character = player.Character
        if character then
            setNoClip(character, true)
            player.CharacterAdded:Connect(function(newCharacter)
                setNoClip(newCharacter, true)
            end)
        end
    end
end

local function disableNoClip()
    for _, player in ipairs(Players:GetPlayers()) do
        local character = player.Character
        if character then
            setNoClip(character, false)
        end
    end
end

local function enableInfiniteJump()
    for _, player in ipairs(Players:GetPlayers()) do
        local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            UserInputService.JumpRequest:Connect(function()
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end)
        end
    end
end

local Tab = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Tab:AddButton({
    Name = "Enable No-Clip",
    Callback = function()
        enableNoClip()
    end
})

Tab:AddButton({
    Name = "Disable No-Clip",
    Callback = function()
        disableNoClip()
    end
})

Tab:AddButton({
    Name = "Enable Infinite Jump",
    Callback = function()
        enableInfiniteJump()
    end
})

OrionLib:Init()
