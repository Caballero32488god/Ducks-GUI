local button = script.Parent
local soundId = "rbxassetid://6847929757" -- Your audio asset ID

local function changeMusic()
    -- Create a new Sound object
    local sound = Instance.new("Sound")
    sound.SoundId = soundId
    sound.Volume = 1 -- Adjust the volume as needed
    sound.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui") -- Parent it to PlayerGui for local playback
    sound:Play()

    -- Optional: Destroy the sound after it finishes playing
    sound.Ended:Connect(function()
        sound:Destroy()
    end)
end

button.MouseButton1Click:Connect(changeMusic)
