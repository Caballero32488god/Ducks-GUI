-- Killer tab setup
Tabs.Killer:AddButton({
    Title = "Start Killing",
    Callback = function()
        -- Your existing Start Killing logic here
    end
})

local DropdownKillMultiple = Tabs.Killer:AddDropdown("KillMultipleDropdown", {
    Title = "Kill Multiple People",
    Values = {},
    Multi = true
})

-- Function to update the Kill Multiple dropdown with all players
local function updateKillMultipleDropdown()
    local playerNames = {}
    for _, player in ipairs(Players:GetPlayers()) do
        table.insert(playerNames, player.Name)
    end

    DropdownKillMultiple:SetValue(playerNames)
end

-- Initial population of the dropdown
updateKillMultipleDropdown()

-- Refresh the dropdown when a player joins or leaves
Players.PlayerAdded:Connect(updateKillMultipleDropdown)
Players.PlayerRemoving:Connect(updateKillMultipleDropdown)
