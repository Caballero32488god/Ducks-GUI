local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

wait(1) -- Short wait before creating the GUI

local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "by Masterboy123",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
    Kill = Window:AddTab({ Title = "Kill", Icon = "settings" }),
    AutoFarm = Window:AddTab({ Title = "Auto Farm", Icon = "" }),
    Stats = Window:AddTab({ Title = "Stats", Icon = "" }),
    Misc = Window:AddTab({ Title = "Misc", Icon = "" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" }) -- Added Settings tab
}

do
    -- Example Button in Main
    Tabs.Main:AddButton({
        Title = "Example Button",
        Callback = function()
            print("Example Button clicked!")
        end
    })

    -- Dropdowns in Kill
    local playerList = {}

    for _, player in pairs(game.Players:GetPlayers()) do
        table.insert(playerList, player.Name)
    end

    Tabs.Kill:AddDropdown("SingleKill", {
        Title = "Select a Player to Kill",
        Values = playerList,
        Multi = false,
        Default = playerList[1],
    }):OnChanged(function(selectedPlayer)
        print("Selected player to kill:", selectedPlayer)
        -- Add kill logic here
    end)

    Tabs.Kill:AddDropdown("MultipleKill", {
        Title = "Select Players to Kill",
        Values = playerList,
        Multi = true,
        Default = {},
    }):OnChanged(function(selectedPlayers)
        print("Selected players to kill:", table.concat(selectedPlayers, ", "))
        -- Add kill logic here
    end)

    -- Dropdown in Stats
    Tabs.Stats:AddDropdown("SelectPlayerStats", {
        Title = "Select Player",
        Values = playerList,
        Multi = false,
        Default = playerList[1],
    }):OnChanged(function(selectedPlayer)
        print("Showing stats for:", selectedPlayer)
        -- Add logic to display stats here
    end)

    -- Dropdown for GUI Color in Settings
    local colorOptions = {
        "Darker",
        "Dark",
        "Aqua",
        "Light",
        "Rose"  -- Added the new Rose theme
    }

    Tabs.Settings:AddDropdown("ColorDropdown", {
        Title = "Select GUI Color",
        Values = colorOptions,
        Multi = false,
        Default = colorOptions[1],
    }):OnChanged(function(selectedColor)
        Window:SetTheme(selectedColor) -- Assuming you have a way to set this theme
        print("GUI color changed to:", selectedColor)
    end)
end

Fluent:Notify({
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 8
})

-- Load any saved settings or configurations if needed
SaveManager:LoadAutoloadConfig()
