local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")

-- Global variable for teleportation and attacking state
_G.teleportPlayersActive = false

-- Create the toggle button
ToggleButton.Size = UDim2.new(0, 100, 0, 50)
ToggleButton.Position = UDim2.new(0.5, -50, 0.5, -25)
ToggleButton.Text = "Start Killing"
ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Parent = ScreenGui

ScreenGui.Parent = game.CoreGui

-- Function to create and display notification
local function showNotification(message)
    local Notification = Instance.new("TextLabel")
    Notification.Text = message
    Notification.Size = UDim2.new(0.3, 0, 0.1, 0)
    Notification.Position = UDim2.new(0.5, -75, 0.1, 0)
    Notification.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Notification.TextColor3 = Color3.fromRGB(255, 255, 255)
    Notification.TextScaled = true
    Notification.Parent = ScreenGui

    -- Fade out effect
    for i = 1, 10 do
        wait(0.1)
        Notification.TextTransparency = i / 10
    end

    Notification:Destroy()
end

-- Function to teleport heads of all players to local player's hand and hit them
local function teleportHeadsAndHitPlayers()
    while _G.teleportPlayersActive do
        for _, v in pairs(Players:GetPlayers()) do
            if v ~= LocalPlayer and v.Character and v.Character:FindFirstChild("Head") then
                local head = v.Character.Head
                local handPosition = LocalPlayer.Character.RightHand.Position -- or LeftHand, adjust as needed

                -- Teleport player's head to local player's hand position
                head.Position = handPosition + Vector3.new(0, 0, 0) -- Adjust for better alignment if needed

                -- Find the Punch tool in the backpack
                local punchTool = LocalPlayer.Backpack:FindFirstChild("Punch")
                if punchTool then
                    -- Set attackTime value to 0.1 if it exists
                    if punchTool:FindFirstChild("attackTime") then
                        punchTool.attackTime.Value = 0.1
                    end

                    LocalPlayer.Character.Humanoid:EquipTool(punchTool)
                    LocalPlayer.muscleEvent:FireServer("punch", "rightHand")
                    LocalPlayer.muscleEvent:FireServer("punch", "leftHand")
                end
            end
        end
        wait(0.1) -- Adjust frequency of actions
    end
end

-- Start action
local function startAction()
    _G.teleportPlayersActive = true
    teleportHeadsAndHitPlayers()
end

-- Toggle action on button click
ToggleButton.MouseButton1Click:Connect(function()
    if not _G.teleportPlayersActive then
        showNotification("Started Killing!")
        startAction()
        ToggleButton.Text = "Stop Killing"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    else
        _G.teleportPlayersActive = false
        showNotification("Stopped Killing.")
        ToggleButton.Text = "Start Killing"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

-- Initially hide the button
ToggleButton.Visible = true
