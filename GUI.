local player = game.Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

-- List of tools to modify
local tools = {
    "Punch",
    "Ground Slam",
    "Stomp",
    "Handstands",
    "Pushups",
    "Weight",
    "Situps"
}

-- Function to modify tools
local function modifyTools()
    for _, tool in pairs(tools) do
        local existingTool = backpack:FindFirstChild(tool)
        if existingTool then
            existingTool:Destroy() -- Remove tool from backpack
        end
    end

    -- Create new tools with modified properties
    for _, toolName in pairs(tools) do
        local newTool = Instance.new("Tool")
        newTool.Name = toolName
        
        local attackTime = Instance.new("NumberValue")
        attackTime.Name = "attackTime"
        attackTime.Value = 0.1
        attackTime.Parent = newTool

        local repTime = Instance.new("NumberValue")
        repTime.Name = "repTime"
        repTime.Value = 0.1
        repTime.Parent = newTool

        newTool.Parent = backpack
    end
end

-- Run the function
modifyTools()
