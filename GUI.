local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")

-- Global variable for teleportation state
_G.teleportPlayersActive = false

-- Create the toggle button
ToggleButton.Size = UDim2.new(0, 150, 0, 50)
ToggleButton.Position = UDim2.new(0.5, -75, 0.5, -25)
ToggleButton.Text = "Start Teleporting"
ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Parent = ScreenGui

ScreenGui.Parent = game.CoreGui

-- Function to create and display notification
local function showNotification(message)
    local Notification = Instance.new("TextLabel")
    Notification.Text = message
    Notification.Size = UDim2.new(0.3, 0, 0.1, 0)
    Notification.Position = UDim2.new(0.5, -75, 0.1, 0)
    Notification.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Notification.TextColor3 = Color3.fromRGB(255, 255, 255)
    Notification.TextScaled = true
    Notification.Parent = ScreenGui

    -- Fade out effect
    for i = 1, 10 do
        wait(0.1)
        Notification.TextTransparency = i / 10
    end

    Notification:Destroy()
end

-- Function to teleport only the heads of other players
local function teleportOtherPlayersHeads()
    local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    while _G.teleportPlayersActive do
        for _, otherPlayer in pairs(Players:GetPlayers()) do
            if otherPlayer ~= LocalPlayer then
                local otherCharacter = otherPlayer.Character
                if otherCharacter and otherCharacter:FindFirstChild("Head") then
                    local head = otherCharacter.Head
                    
                    -- Teleport head to the local player's position
                    head.Position = humanoidRootPart.Position
                end
            end
        end
        
        wait(1) -- Adjust the wait time as needed
    end
end

-- Start action
local function startTeleporting()
    _G.teleportPlayersActive = true
    teleportOtherPlayersHeads()
end

-- Toggle action on button click
ToggleButton.MouseButton1Click:Connect(function()
    if not _G.teleportPlayersActive then
        showNotification("Started Teleporting Heads!")
        startTeleporting()
        ToggleButton.Text = "Stop Teleporting"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    else
        _G.teleportPlayersActive = false
        showNotification("Stopped Teleporting Heads.")
        ToggleButton.Text = "Start Teleporting"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

-- Initially hide the button
ToggleButton.Visible = true
